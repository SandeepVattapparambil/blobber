<!DOCTYPE html>
<html>

<head>
    <title>Blobber •
        <%=user_name%>
    </title>
    <!--Import Google Icon Font-->
    <link href="../stylesheets/icon.css" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="../stylesheets/materialize.css" media="screen,projection" />
    <!-- Custom css-->
    <link type="text/css" rel="stylesheet" href="../stylesheets/custom.css" media="screen,projection" />
    <!--Import nprogress.css-->
    <link rel='stylesheet' href='../stylesheets/nprogress.css' />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
        <li><a href="/home/<%=user_name%>">Profile</a></li>
        <li><a href="#!">Settings</a></li>
        <li class="divider"></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
    <nav class="white">
        <div class="container">
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo grey-text">Blobber <span id="brand_badge" class="new badge"></span></a>
                <a href="#" data-activates="slide-out" class="button-collapse grey-text"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <!-- Dropdown Trigger -->
                    <li>
                        <a class="dropdown-button grey-text" href="#!" data-activates="dropdown1">
                            <%=user_name%>
                                <i class="material-icons right">arrow_drop_down</i></a>
                    </li>
                </ul>
                <ul id="slide-out" class="side-nav">
                    <li><a href="/home/<%=user_name%>">Profile</a></li>
                    <li><a href="#!">Settings</a></li>
                    <li>
                        <div class="divider"></div>
                    </li>
                    <li><a class="waves-effect" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <!-- Page Content goes here -->
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <form id="profile" name="profile" method="POST" action="/update_profile">
                        <div class="card-content grey-text">
                            <span class="card-title">Profile • <%=first_name%></span>
                            <div class="row">
                                <div class="input-field col s12 m6">
                                    <input placeholder="<%=first_name%>" id="first_name" name="first_name" type="text" class="validate">
                                    <label for="first_name">First Name</label>
                                </div>
                                <div class="input-field col s12 m6">
                                    <input placeholder="<%=last_name%>" id="last_name" name="last_name" type="text" class="validate">
                                    <label for="last_name">Last Name</label>
                                </div>
                                <div class="input-field col s12 m6">
                                    <input placeholder="<%=user_name%>" id="user_name" name="user_name" type="text" class="validate">
                                    <label for="user_name">User Name</label>
                                </div>
                                <div class="input-field col s12 m6">
                                    <input placeholder="<%=password%>" id="password" name="password" type="text" class="validate">
                                    <label for="password">Password</label>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn-flat teal white-text waves-effect waves-light" type="reset">Cancel</button>
                            <button class="btn-flat teal white-text waves-effect waves-light" type="submit">Save</button> </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!--Import Materialize.js-->
    <script type="text/javascript" src="../javascripts/materialize.js"></script>
    <!--Import nprogress.js-->
    <script src='../javascripts/nprogress.js'></script>

    <!--Import Custom.js-->
    <script type="text/javascript" src="../javascripts/custom.js"></script>
    <script>
    </script>
</body>

</html>
